{
  "targets": {
    "info": {
      "server1": {
        "disksize": "20GB",
        "memory": 2048,
        "cpu": 2,
        "synced_pp_conf_folder": true
      },
      "server2": {
        "disksize": "20GB",
        "memory": 4096,
        "cpu": 2
      },
      "server3": {
        "disksize": "20GB",
        "memory": 3072,
        "cpu": 2
      },
      "server4": {
        "disksize": "20GB",
        "memory": 6144,
        "cpu": 2
      }
    },
    "meta": {
      "os": "centos/7"
    }
  },
  "punch": {
    "installation_directory": "/data/opt",
    "data_storage_directory": "/data",
    "elasticsearch": {
      "servers": [
        "server2"
      ],
      "cluster_production_transport_address": "server2",
      "memory": "512m",
      "security": true
    },
    "kibana": {
      "servers": [
        "server1"
      ],
      "security": true
    },
    "zookeeper": {
      "servers": [
        "server2"
      ],
      "childopts": "-server -Xmx128m -Xms128m"
    },
    "gateway": {
      "servers": [
        "server1"
      ],
      "inet_address": "172.28.128.21",
      "security": true
    },
    "storm": {
      "master": {
        "servers": [
          "server3"
        ],
        "cluster_production_address": "server3"
      },
      "ui": {
        "servers": [
          "server3"
        ],
        "cluster_admin_url": "server3"
      },
      "slaves": [
        "server3"
      ],
      "workers_childopts": "-Xmx128m",
      "supervisor_memory_mb": 256
    },
    "kafka": {
      "brokers": [
        "server2:9092"
      ],
      "jvm_xmx": "512M"
    },
    "shiva": {
      "servers": [
        "server4"
      ]
    },
    "spark": {
      "masters": [
        "server3"
      ],
      "slaves": [
        "server3"
      ],
      "slaves_memory": "1200M"
    },
    "operator": {
      "servers": [
        "server1"
      ],
      "username": "vagrant"
    }
  }
}