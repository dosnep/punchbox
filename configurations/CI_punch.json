{
    "targets": {
      "info": {
        "pbciserver1": {
          "disksize": "20GB",
          "memory": 3072,
          "cpu": 2
        },
        "pbciserver2": {
          "disksize": "20GB",
          "memory": 4096,
          "cpu": 2
        },
        "pbciserver3": {
          "disksize": "20GB",
          "memory": 3072,
          "cpu": 2
        },
        "pbciserver4": {
          "disksize": "20GB",
          "memory": 6144,
          "cpu": 2
        }
      },
      "meta": {
        "os": "ubuntu/bionic64"
      }
    },
    "punch": {
      "elasticsearch": {
        "servers": [
          "pbciserver2"
        ],
        "cluster_production_transport_address": "pbciserver2",
        "memory": "512m"
      },
      "kibana": {
        "servers": [
          "pbciserver1"
        ]
      },
      "zookeeper": {
        "servers": [
          "pbciserver2"
        ],
        "childopts": "-server -Xmx128m -Xms128m"
      },
      "gateway": {
        "servers": [
          "pbciserver1"
        ],
        "inet_address": "172.28.128.21"
      },
      "storm": {
        "master": {
          "servers": [
            "pbciserver3"
          ],
          "cluster_production_address": "pbciserver3"
        },
        "ui": {
          "servers": [
            "pbciserver3"
          ],
          "cluster_admin_url": "pbciserver3"
        },
        "slaves": [
          "pbciserver3"
        ],
        "workers_childopts": "-Xmx128m",
        "supervisor_memory_mb": 256
      },
      "kafka": {
        "brokers": [
          "pbciserver2:9092"
        ],
        "jvm_xmx": "512M"
      },
      "shiva": {
        "servers": [
          "pbciserver4"
        ]
      },
      "spark": {
        "masters": [
          "pbciserver3"
        ],
        "slaves": [
          "pbciserver3"
        ],
        "slaves_memory": "1200M"
      },
      "operator": {
        "servers": [
          "pbciserver1"
        ],
        "username": "adm-infra"
      }
    }
  }
  