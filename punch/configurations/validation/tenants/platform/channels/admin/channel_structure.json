{
    "version" : "6.0",
    "start_by_tenant" : false,
    "stop_by_tenant" : true,
    "applications" : [
        {
            "name" : "elasticsearch-housekeeping",
            "runtime" : "shiva",
            "command" : "elasticsearch-housekeeping",
            "args": [
                "elasticsearch-housekeeping.json"
            ],
            "cluster" : "local",
            "shiva_runner_tags" : ["local"],
            "quartzcron_schedule" : "0 0 * ? * * *"
        },
        {
            "name" : "platform-monitoring",
            "runtime" : "shiva",
            "command" : "platform-monitoring",
            "args": [
                "platform-monitoring-configuration.json"
            ],
            "cluster" : "local",
            "shiva_runner_tags" : ["local"]
        },
        {
            "name" : "platform-reporter",
            "runtime" : "shiva",
            "command" : "punchlinectl",
            "args": [
                "start", "--punchline", "platform-reporter.json"
            ],
            "cluster" : "local",
            "shiva_runner_tags" : ["local"]
        }
    ]
}
