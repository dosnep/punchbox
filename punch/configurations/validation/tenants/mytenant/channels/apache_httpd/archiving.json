{
  "version": "6.0",
  "type": "punchline",
  "runtime": "storm",
  "meta": {
    "tenant": "mytenant",
    "channel": "apache_httpd",
    "vendor": "apache_httpd"
  },
  "dag": [
    {
      "type": "kafka_input",
      "settings": {
        "topic": "mytenant_apache_httpd_archiving",
        "start_offset_strategy": "last_committed"
      },
      "executors": 1,
      "fail_action": "exit",
      "publish": [
        {
          "stream": "logs",
          "fields": [
            "log",
            "_ppf_id",
            "_ppf_timestamp",
            "_ppf_partition_id",
            "_ppf_partition_offset"
          ]
        }
      ]
    },
    {
      "type": "file_output",
      "settings": {
        "strategy": "at_least_once",
        "destination": "file:///tmp/archive-logs/storage",
        "topic": "httpd",
        "timestamp_field": "_ppf_timestamp",
        "file_prefix_pattern": "%{topic}/%{date}/puncharchive-%{tags}-%{offset}",
        "compression_format": "GZIP",
        "create_root": true,
        "batch_size": 1000,
        "batch_expiration_timeout": "10s",
        "fields": [
          "_ppf_id",
          "_ppf_timestamp",
          "log"
        ]
      },
      "executors": 1,
      "subscribe": [
        {
          "component": "kafka_input",
          "stream": "logs"
        }
      ],
      "publish": [
        {
          "stream": "metadatas",
          "fields": [
            "metadata"
          ]
        }
      ]
    },
    {
      "type": "elasticsearch_output",
      "settings": {
        "index": {
          "type": "daily",
          "prefix": "mytenant-archive-"
        },
        "document_json_field": "metadata",
        "batch_size": 1,
        "reindex_failed_documents": true,
        "error_index": {
          "type": "daily",
          "prefix": "mytenant-archive-errors"
        }
      },
      "subscribe": [
        {
          "component": "file_output",
          "stream": "metadatas"
        }
      ]
    }
  ],
  "metrics": {
    "reporters": [
      {
        "type": "kafka"
      }
    ]
  },
  "settings": {
    "topology.worker.childopts": "-server -Xms256m -Xmx256m"
  }
}
