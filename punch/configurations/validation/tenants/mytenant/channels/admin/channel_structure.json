{
    "version" : "6.0",
    "start_by_tenant" : true,
    "stop_by_tenant" : true,
    "applications" : [  
        { 
            "name" : "archives-housekeeping",
            "runtime" : "shiva",
            "command" : "archives-housekeeping",
            "args": [
                "archives-housekeeping.json"
            ],
            "cluster" : "local",
            "shiva_runner_tags" : ["local"],
            "quartzcron_schedule" : "0 0/5 * ? * * *"
        },
        {
            "name" : "elasticsearch-housekeeping",
            "runtime" : "shiva",
            "command" : "elasticsearch-housekeeping",
            "args": [
                "--tenant-configuration-path",
                "elasticsearch-housekeeping.json"
            ],
            "cluster" : "local",
            "shiva_runner_tags" : ["local"],
            "quartzcron_schedule" : "0 0 * ? * * *"
        },
        {
            "name" : "channels-monitoring",
            "runtime" : "shiva",
            "command" : "channels-monitoring",
            "args": [
                "channels-monitoring.json"
            ],
            "cluster" : "local",
            "shiva_runner_tags" : ["local"]
        }
    ]
}
